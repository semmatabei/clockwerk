{
  "name": "clockwerk",
  "version": "0.1.0",
  "description": "Node js job scheduler (Cron)",
  "main": "lib/index.js",
  "scripts": {
    "lint": "marlint",
    "unit": "mocha --compilers js:babel/register tests/**/**/*.js",
    "test": "npm run lint && npm run unit",
    "coverage": "istanbul cover _mocha tests/**/*.js -- --compilers js:babel/register",
    "coveralls": "istanbul cover _mocha tests/**/*.js --report lcovonly -- --compilers js:babel/register && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "prepublish": "babel -d lib/ src/"
  },
  "marlint": {
    "ignores": [
      "lib/*.js",
      "tests/*.js"
    ],
    "rules": {
      "no-fallthrough": 0
    }
  },
  "keywords": [
    "cron",
    "nodejs",
    "job",
    "scheduler"
  ],
  "author": "semmatabei",
  "license": "MIT",
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-plugin-flow-comments": "^1.0.9",
    "chai": "^3.2.0",
    "chai-as-promised": "^5.1.0",
    "coveralls": "^2.11.4",
    "istanbul": "^0.3.19",
    "marlint": "^1.3.1",
    "mocha": "^2.3.2",
    "sinon": "^1.16.1",
    "sinon-chai": "^2.8.0"
  },
  "dependencies": {
    "cron-parser": "^0.7.1"
  }
}
